<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppForTest.Views.CreateExcercisePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Excercise name:"/>
            <Entry Placeholder="Excercise name" x:Name="EName"/>
            <Label Text="File name:"/>
            <Entry Placeholder="File name" x:Name="EFilename"/>
            <Button Text="Create" Clicked="Button_Clicked"/>
            <Button Text="Pick file" Clicked="Button_Clicked_1"/>
            <Label FontSize="Large" x:Name="Labelinfo"/>
            <Button Text="Open file" Clicked="Button_Clicked_2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>