<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             x:Class="AppForTest.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username:"/>
            <Entry Placeholder="Username" x:Name="EntryUsername"/>
            <Label Text="Password:"/>
            <Entry IsPassword="True" Placeholder="Password" x:Name="EntryPassword"/>
            <Button Text="Login" Clicked="Button_Clicked"/>
            <Label Text="Sign up" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>