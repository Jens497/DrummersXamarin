<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             x:Class="AppForTest.Views.RegistrationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username"/>
            <Entry Placeholder="Username" x:Name="EUsername"/>
            <Label Text="Password"/>
            <Entry IsPassword="True" Placeholder="Password" x:Name="EPassword"/>
            <Label Text="Reapet password"/>
            <Entry IsPassword="True" Placeholder="Repeat password" x:Name="ERepeatPassword"/>
            <Label Text="Email"/>
            <Entry Placeholder="Email" x:Name="EEmail"/>
            <Label Text="First name"/>
            <Entry Placeholder="First name" x:Name="EFirstname"/>
            <Label Text="Last name"/>
            <Entry Placeholder="Last name" x:Name="ELastname"/>
            <Button Text="Register" Clicked="Register_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>